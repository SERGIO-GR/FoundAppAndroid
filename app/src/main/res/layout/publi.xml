<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".publi">

    <TextView
        android:id="@+id/textox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/purple_700"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="Nueva PublicaciÃ³n"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imagepub"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_baseline_image_24"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/nombrepub"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagepub"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:hint="Nombre del Objeto"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:padding="10dp" />


    <EditText
        android:id="@+id/despub"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombrepub"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:hint="Descripcion del Objeto"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/agregarpubli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgroup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:text="Agregar Publicacion" />

    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="253dp"
        android:layout_height="113dp"
        android:layout_below="@+id/despub"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp">

        <RadioButton
            android:id="@+id/Operdido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objeto Perdido" />

        <RadioButton
            android:id="@+id/Oencontrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objeto encontrado" />
    </RadioGroup><![CDATA[



    />


]]>
</RelativeLayout>